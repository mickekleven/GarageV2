@model Vehicle
@using GarageV2.Utilities
@using static GarageV2.Utilities.Enums




<div class="col-md-4">

    <select class="form-select form-select-sm" name="selectedValue" onchange="fetchData(this.value);">

        @foreach (var ty in Enum.GetValues(typeof(VehicleType)))
        {

            if (Model is null)
            {
                <option class="vihtype" value="@ty">@ty</option>
            }
            else
            {
                if (ty!.ToString().Equals(Model.VehicleType.ToString(), StringComparison.OrdinalIgnoreCase))
                {
                    <option selected class="vihtype" value="@ty">@ty</option>
                }
                else
                {
                    <option class="vihtype" value="@ty">@ty</option>
                }
            }
        }
    </select>

</div>

